name: .NET

on:
  push:
    branches: [ stg ]
  pull_request:
    branches: [  ]

jobs:
  build:

    runs-on: ubuntu-latest

    steps:
    - uses: actions/checkout@v2
    - name: Setup .NET
      uses: actions/setup-dotnet@v1
      with:
        dotnet-version: 6.0.x
    - name: Restore dependencies
      run: cd Sinergija21 && dotnet restore
    - name: Build
      run: cd Sinergija21 && dotnet build --no-restore
